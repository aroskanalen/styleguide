{% if iconRounded.color == "gray" %}
  {% set iconRoundedColor = " is-color-gray" %}
{%  endif %}

{% if iconRounded.size == "small" %}
  {% set iconRoundedSize = " md-18" %}
{%  endif %}

{% if iconRounded.size == "normal" %}
  {% set iconRoundedSize = " md-24" %}
{%  endif %}

{% if iconRounded.size == "medium" %}
  {% set iconRoundedSize = " md-32" %}
{%  endif %}

{% if iconRounded.size == "large" %}
  {% set iconRoundedSize = " md-48" %}
{%  endif %}

<i class="icon-rounded material-icons{{ iconRoundedSize }}{{ iconRoundedColor }}">{{ iconRounded.icon }}</i>

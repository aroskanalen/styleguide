{% embed "modules-popup" with { popup: { jsClass: popupAddRole.jsClass } } %}
  {% block content %}
    {% embed "modules-grid-full" %}
      {% block items %}
        {% embed "modules-grid-item" %}
          {% block content %}
            {% include "elements-heading-has-spacing-after" with { headingHasSpacingAfter: popupAddRole.headingHasSpacingAfter } %}
          {% endblock %}
        {% endembed %}
        {% embed "modules-grid-item" %}
          {% block content %}
            {% include "modules-forms-text-field" with { formsLabel: popupAddRole.formsLabel, formsText: popupAddRole.formsText } %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}
    {% embed "modules-grid-halfs" %}
      {% block items %}
        {% embed "modules-grid-item" %}
          {% block content %}
            {% include "elements-button-link-neutral" with { buttonLinkNeutral: popupAddRole.buttonLinkNeutral } %}
          {% endblock %}
        {% endembed %}
        {% embed "modules-grid-item" %}
          {% block content %}
            {% include "elements-button-link" with { buttonLink: popupAddRole.buttonLink } %}
          {% endblock %}
        {% endembed %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}
